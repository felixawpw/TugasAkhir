<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.felixawpw.indoormaps.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:text="Account Details"
            android:textColor="@color/main_color_500"
            android:textSize="16sp"
            app:typeface="robotoLight" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/main_color_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_empty"
                android:clickable="true"
                android:padding="16dp"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:textSize="18dp"
                tools:ignore="SpUsage" />

            <com.felixawpw.indoormaps.view.MaterialRippleLayout
                android:id="@+id/fragment_account_link_accounts"
                style="@style/RippleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:rippleColor="@color/main_color_grey_400" >

                <TextView
                    android:id="@+id/fragment_account_text_accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile" />
            </com.felixawpw.indoormaps.view.MaterialRippleLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_empty"
                android:clickable="true"
                android:padding="16dp"
                android:drawableLeft="@drawable/baseline_place_24"
                android:textSize="18dp"
                tools:ignore="SpUsage" />

            <com.felixawpw.indoormaps.view.MaterialRippleLayout
                android:id="@+id/fragment_account_link_added_places"
                style="@style/RippleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:rippleColor="@color/main_color_grey_400">

                <TextView
                    android:id="@+id/fragment_account_text_added_places"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added Places" />
            </com.felixawpw.indoormaps.view.MaterialRippleLayout>

        </LinearLayout>


        <com.felixawpw.indoormaps.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:text="Settings"
            android:textColor="@color/main_color_500"
            android:textSize="16sp"
            app:typeface="robotoLight" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/main_color_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_empty"
                android:clickable="true"
                android:padding="16dp"
                android:drawableLeft="@drawable/baseline_exit_to_app_24"
                android:textSize="18dp"
                tools:ignore="SpUsage" />

            <com.felixawpw.indoormaps.view.MaterialRippleLayout
                android:id="@+id/fragment_account_link_signout"
                style="@style/RippleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:rippleColor="@color/main_color_grey_400" >

                <TextView
                    android:id="@+id/fragment_account_text_signout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Out" />
            </com.felixawpw.indoormaps.view.MaterialRippleLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>