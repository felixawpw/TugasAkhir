<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/selector_background_empty"
    android:id="@+id/list_item_default_main_layout">

    <com.felixawpw.indoormaps.font.RobotoTextView
        android:id="@+id/text"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="0dp"
        android:textColor="@color/main_color_grey_700"
        android:textSize="16sp" />

    <com.felixawpw.indoormaps.font.RobotoTextView
        android:id="@+id/text_mapname"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:textColor="@color/main_color_grey_700"
        android:textSize="16sp" />

</LinearLayout>