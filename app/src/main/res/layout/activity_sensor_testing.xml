<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SensorTestingActivity">

    <TextView
        android:id="@+id/sensor_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer" />

    <TextView
        android:id="@+id/sensor_accelerometer_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acc Average" />

    <TextView
        android:id="@+id/sensor_magnetic_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnetic" />

    <TextView
        android:id="@+id/sensor_magnetic_field_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mag Average" />

    <TextView
        android:id="@+id/sensor_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orientation" />

    <TextView
        android:id="@+id/sensor_compass_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orientation Avg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sensor_scroll_layout" />
    </ScrollView>
</LinearLayout>