<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_owner_map_main_layout"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OwnerMapActivity">

    <LinearLayout
        android:id="@+id/activity_owner_map_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.felixawpw.indoormaps.view.PinView
            android:id="@+id/activity_owner_map_view_image_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:id="@+id/activity_owner_map_view_element"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/main_color_500"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color_grey_100">

        <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/fontello_search"
            android:textColor="@color/material_grey_600"
            android:textSize="18dp"
            tools:ignore="SpUsage" />

        <EditText
            android:id="@+id/activity_owner_map_search_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background_main"
            android:inputType="text"
            android:textColor="@color/main_color_grey_600"
            android:textCursorDrawable="@drawable/edit_text_cursor_drawable_main" />

        <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
            android:id="@+id/search_microfon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/fontello_microfon"
            android:textColor="@color/material_grey_600"
            android:textSize="18dp"
            tools:ignore="SpUsage" />

        <com.felixawpw.indoormaps.font.MaterialDesignIconsTextView
            android:id="@+id/search_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/fontello_x_mark"
            android:textColor="@color/material_grey_600"
            android:textSize="18dp"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
            android:id="@+id/activity_owner_map_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            />

        <Button
            android:id="@+id/activity_owner_map_view_button_add_marker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_oval"
            android:text="Add New Marker"
            android:textColor="@color/white"
            />
    </LinearLayout>


</LinearLayout>