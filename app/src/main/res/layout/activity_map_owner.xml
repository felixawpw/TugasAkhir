<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapOwnerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_map_owner_universal_pager"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="14"
        tools:context=".TabMediaActivity">

    </android.support.v4.view.ViewPager>

    <com.felixawpw.indoormaps.view.PagerSlidingTabStrip
        android:id="@+id/activity_map_owner_universal_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/main_color_500"
        app:pstsDividerColor="@android:color/white"
        app:pstsDividerPadding="16dp"
        app:pstsDividerWidth="0dp"
        app:pstsIndicatorColor="@color/material_yellow_500"
        app:pstsIndicatorHeight="2dp"
        app:pstsTabTextColor="@android:color/white" />

</LinearLayout>